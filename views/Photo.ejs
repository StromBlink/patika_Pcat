<%- include('partials/_headers.ejs') -%>
	<!--

TemplateMo 552 Video Catalog

https://templatemo.com/tm-552-video-catalog

-->

	<body>
		<div class="tm-page-wrap mx-auto">
			<div class="position-relative">

				<%- include('partials/_navigation.ejs') -%>

					<div class="tm-welcome-container tm-fixed-header tm-fixed-header-1">
						<div class="text-center">
							<p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 text-white mx-auto">Background
								image
								can be fixed. Content will simply slide over.</p>
						</div>
					</div>

					<!-- Header image -->
					<div id="tm-fixed-header-bg"></div>
			</div>

			<!-- Page content -->
			<div class="container-fluid">
				<div class="mx-auto tm-content-container">
					<main>
						<div class="row mb-5 pb-4">
							<div class="col-12" align="center">
								<!-- Photo 1422x800 -->
								<img style="margin: auto; 							  		
								max-width:1420px; max-height:800px" src="<%= photo.image %>">
							</div>
						</div>
						<div class="row mb-5 pb-5">
							<div class="col-xl-8 col-lg-7">
								<!-- Photo description -->
								<div class="tm-video-description-box">
									<h2 class="mb-5 tm-video-title">
										<%= photo.title %>
									</h2>
									<p class="mb-4">
										<%= photo.description %>
									</p>
								</div>
							</div>
							<div class="col-xl-4 col-lg-5">
								<!-- Share box -->
								<div class="tm-bg-gray tm-share-box">

									<div class="text-center">
										<a href="/Photo/edit/<%= photo.id %>"
											class="btn btn-primary mb-5 p-0 tm-btn-animate tm-btn-download tm-icon-download"><span>Edit
												Details</span><a>
									</div>

									<div class="text-center">
										<a href="/Photo/<%= photo.id %>?_method=DELETE"
											class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download"
											onclick="return confirm('ARE YOU SURE?')"><span>Delete
												Photo</span></a>
									</div>
								</div>
							</div>
						</div>
						<div class=" row pt-4 pb-5">
							<div class="col-12">
								<h2 class="mb-5 tm-text-primary">Related Photoss for You</h2>
								<div class="row tm-catalog-item-list">
									<% for (let i=0; i <photos.length; i++){ %>
										<div class="col-lg-4 col-md-6 col-sm-12 tm-catalog-item">
											<div class="position-relative tm-thumbnail-container" align="center" style="  							  		
											 width:400px;  height:200px">
												<img src="<%= photos[i].image %>" alt="Image" style="  							  		
												max-width:200px; max-height:200px" class="img-fluid tm-catalog-item-img">
												<a href="/Photo/<%= photos[i].id %>"
													class="position-absolute tm-img-overlay">
													<i class="fas fa-play tm-overlay-icon"></i>
												</a>
											</div>
											<div class="p-3 tm-catalog-item-description">
												<h3 class="tm-text-gray text-center tm-catalog-item-title">
													<%= photos[i].title %>
												</h3>
											</div>
										</div>
										<% } %>
								</div>
							</div>
						</div>
					</main>

					<!-- Subscribe form and footer links -->
					<%- include('partials/_footer.ejs') -%>
	</body>

	</html>